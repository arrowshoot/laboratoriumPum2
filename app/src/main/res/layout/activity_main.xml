<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright"
    tools:context="com.example.student.myapplication.MainActivity">

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/miasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zabrze!"

        android:textAlignment="viewStart"
        android:textSize="24sp" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_brightness_5_black_24dp"
        />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 stopni celcjusza!"

        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pamietaj o filtrze!"

        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <TextView
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj miejsce:"

        android:textAlignment="viewStart"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/wpisz"
        android:layout_width="300dp"
        android:maxLines="1"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="@android:color/holo_blue_bright"
        android:background="@android:color/white"
        android:id="@+id/zmien"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Zmien Miejsce"
        android:layout_margin="12dp"
        />
    <Button
        android:textColor="@android:color/holo_blue_bright"
        android:background="@android:color/white"
        android:id="@+id/pokaz"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Pokaz liste dostepnych miejsc"
        />

</LinearLayout>
